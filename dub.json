{
    "name": "gen-test-double",
    "description": "Generate test doubles from C/C++ code by analyzing with LLVM/Clang",
    "copyright": "Copyright © 2014-2015, Joakim Brännström",
    "authors": ["Joakim Brännström"],
    "license": "GPL",
    "dependencies": {
        "tested": {"version": "~>0.9.4"},
        "dsrcgen": {"path": "dsrcgen"},
        "docopt": "~>0.6.1-b.2"
    },

    "targetPath": "build",
    "mainSourceFile": "source/app.d",
    "sourcePaths": ["source", "clang"],
    "importPaths": ["source", "clang"],
    "stringImportPaths": ["clang/resources"],
    "excludedSourceFiles" : ["source/wip_main.d"],

    "lflags-posix": ["-lclang", "-rpath", ".", "-L."],
    "targetType": "executable",
    "buildRequirements": ["requireBoundsCheck", "requireContracts"],

    "configurations": [
        {"name": "release"},
        {"name": "wip",
            "mainSourceFile": "source/wip_main.d",
            "excludedSourceFiles" : ["source/app.d"],
            "targetName": "wip"
        },
        {"name": "unittest",
            "targetName": "unittest",
            "buildType": "debugInfo"
        }
    ]
}
